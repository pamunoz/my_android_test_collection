<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        tools:text="Nombre y Apellido"/>
    <TextView
        android:id="@+id/tv_rut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        tools:text="11111111-1"/>
    <TextView
        android:id="@+id/tv_direccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        tools:text="Una direccion en particular"/>
    <TextView
        android:id="@+id/tv_zona"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        tools:text="Zona en particular"/>
    <TextView
        android:id="@+id/tv_ciudad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        tools:text="Ciudad en particular"/>
    <TextView
        android:id="@+id/tv_comuna"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        tools:text="Comuna en particular"/>

</GridLayout>