<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView

        android:id="@+id/iv_article_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_article_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPCION"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:layout_toStartOf="@+id/tv_label_article_total_price"
            android:layout_toLeftOf="@+id/tv_label_article_total_price"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/tv_article_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/holo_red_dark"
            tools:text="$16.000"
            android:layout_below="@+id/tv_article_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            />

        <ImageButton
            android:id="@+id/imb_up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:background="@color/tw__transparent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_article_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:layout_marginTop="8dp"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            tools:text="0"
            android:layout_toLeftOf="@+id/imb_up_arrow"/>

        <ImageButton
            android:id="@+id/imb_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/tw__transparent"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/tv_article_amount"

            />

        <TextView
            android:id="@+id/tv_label_article_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/total_article_price"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/imb_down_arrow"
            android:layout_toStartOf="@+id/imb_down_arrow"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_article_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:minWidth="40dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/imb_down_arrow"
            android:layout_toStartOf="@+id/imb_down_arrow"
            android:layout_toRightOf="@+id/tv_article_description"
            android:layout_toEndOf="@+id/tv_article_description"
            tools:text="$120.000"
            android:layout_below="@+id/tv_label_article_total_price"/>

    </RelativeLayout>



</LinearLayout>